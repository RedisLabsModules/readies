#!/bin/bash

GOLANG_VER=1.15.5
GOLANG_OS=linux
GOLANG_ARCH=amd64

HERE="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
READIES=$(cd $HERE/..; pwd)
. $READIES/shibumi/defs

OP=""
[[ $NOP == 1 ]] && OP=echo

[[ ! -z $(command -v go) && $FORCE != 1 ]] && exit 0

OS=`uname -s`
if [[ $OS == Linux ]]; then
	GOLANG_OS=linux
elif [[ $OS == Darwin ]]; then
	GOLANG_OS=darwin
fi

ARCH=`uname -m`
if [[ $ARCH == x86_64 ]]; then
	GOLANG_ARCH=amd64
elif [[ $ARCH == aarch64 ]]; then
	GOLANG_ARCH=arm64
else
	exit 1
fi

tar=$(mktemp /tmp/golang.XXXXX.tag.gz)
$OP wget -q -O $tar https://dl.google.com/go/go${GOLANG_VER}.${GOLANG_OS}-${GOLANG_ARCH}.tar.gz
$OP tar -C /usr/local -xzf $tar
$OP rm -f $tar

if [[ $NOP != 1 ]]; then
	echo 'export PATH=$PATH:/usr/local/go/bin' > /etc/profile.d/golang.sh
	echo 'export PATH=$PATH:`/usr/local/go/bin/go env GOPATH`/bin' >> /etc/profile.d/golang.sh
fi

# for immediate results, invoke: source /etc/profile.d/golang.sh
