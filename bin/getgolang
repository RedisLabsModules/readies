#!/bin/bash

GOLANG_VER=1.15.6

HERE="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
READIES=$(cd $HERE/.. && pwd)
. $READIES/shibumi/defs

OP=""
[[ $NOP == 1 ]] && OP=echo

[[ ! -z $(command -v go) && $FORCE != 1 ]] && exit 0

OS=`uname -s`
if [[ $OS == Linux ]]; then
	GOLANG_OS=linux
elif [[ $OS == Darwin ]]; then
	GOLANG_OS=darwin
else
	eprint "Cannot determine OS"
	exit 1
fi

ARCH=`uname -m`
if [[ $ARCH == x86_64 ]]; then
	GOLANG_ARCH=amd64
elif [[ $ARCH == aarch64 ]]; then
	GOLANG_ARCH=arm64
else
	eprint "Cannot determine CPU"
	exit 1
fi

tar=$(mktemp /tmp/golang.XXXXX.tag.gz)
$OP wget -q -O $tar https://dl.google.com/go/go${GOLANG_VER}.${GOLANG_OS}-${GOLANG_ARCH}.tar.gz
$OP tar -C /usr/local -xzf $tar
$OP rm -f $tar

profile_d=`get_profile_d`
if [[ $NOP != 1 ]]; then
	cat <<-EOF > $profile_d/golang.sh
		export PATH=$PATH:/usr/local/go/bin
		export PATH=$PATH:`/usr/local/go/bin/go env GOPATH`/bin
EOF
fi

echo "to enable golang, invoke: source $profile_d/golang.sh"
